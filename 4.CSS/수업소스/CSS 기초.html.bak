  <style>
	p {
		/*color:blue;*/
	}
	
	* {
		/*color:gray;*/
	}
	
	span {
		background:yellow;
	}
	
	#testId3{
		color:red;
	}
	#testId4{
		background:blue;
	}
	.testText{
		color:white;
	}

	input[type=text], input[name=searchText]{
		color:purple;
	}
	
/*	input[name=searchText]{
