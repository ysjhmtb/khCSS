	}*/
	
	p[class~=c1]{
		color:brown;
	}

	p[class|=c2]{
		color:yellow;
	}

	p[class|=class]{
		color:red;
	}

	p[class^=c1]{
		background:gray;
	}
	
	p[class$=c2]{
		background:yellow;
	}

	p[class*=d2]{
		background:black;
		color:white;
	}

	div h2.on{
		color:red;
	}
	
	div > ul > li{
		color:red;
	}

	h4 + h5{
		color:red;
	}
	
	h4 ~ h5{
		color:yellow;
	}

	div > h4 ~ p{
		background:gray;
	}

	.section p:active{
		color:red;
	}

	.section p:hover{
		background:gray;
		cursor:pointer;
	}

	input[type=text]:focus{
		background:blue;
	}
	
	input:checked{
		width:50px;
		height:50px;
	}

	option:enabled{
